{
  "name": "school-game",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "description": "School Quiz Game",
  "author": "School Quiz Game Team",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.8"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --mode development",
    "build": "webpack --mode production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run build && concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder -c.extraMetadata.main=build/electron.js",
    "preelectron-pack": "npm run build",
    "generate-icons": "electron-icon-maker --input=./public/icon.png --output=./src/assets/icons"
  },
  "build": {
    "appId": "com.school.game",
    "productName": "School Quiz Game",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "src/assets",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "src/assets/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "School Quiz Game",
      "verifyUpdateCodeSignature": false,
      "compression": "maximum",
      "icon": "src/assets/icons/win/icon.ico"
    },
    "linux": {
      "category": "Education",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/assets/icons/png/512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "School Quiz Game",
      "menuCategory": true,
      "displayLanguageSelector": true,
      "language": 1033
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.9",
    "@babel/preset-typescript": "^7.23.9",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.80",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "electron-icon-maker": "^2.0.1",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0",
    "web-vitals": "^2.1.4",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  }
}
